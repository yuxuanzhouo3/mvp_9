{
  "name": "securefiles-android",
  "version": "1.0.0",
  "description": "SecureFiles Android Mobile Application",
  "main": "index.js",
  "scripts": {
    "start": "react-native start",
    "android": "react-native run-android",
    "android:debug": "react-native run-android --variant=debug",
    "android:release": "react-native run-android --variant=release",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:android:bundle": "cd android && ./gradlew bundleRelease",
    "build:android:debug": "cd android && ./gradlew assembleDebug",
    "clean:android": "cd android && ./gradlew clean",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "sign:android": "cd android && ./gradlew signingReport"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.73.0",
    "react-native-crypto": "^2.2.0",
